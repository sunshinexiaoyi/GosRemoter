<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="true">

    <shape android:shape="rectangle">
        <solid android:color="#9ec9fa" />
    </shape>

</item>

<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <solid android:color="#9ec9fa"/>
    </shape>
</item>


<item >
    <shape android:shape="rectangle">
        <solid
            android:color="@color/live_program_bg" />
        <stroke
            android:width="@dimen/live_program_split_line"
            android:color="@color/live_program_split_line">

        </stroke>
        <padding
            android:bottom="8dp"
            android:top="8dp"
            android:left="10dp"
            android:right="10dp"/>
    </shape>

</item>
</selector>
