<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--只显示右下边框-->
    <item
        android:top="-2dp"
        android:left="-2dp">
        <selector>
            <item android:state_selected="true">

                <shape android:shape="rectangle">
                    <solid android:color="#EE6030" />
                </shape>

            </item>

            <item android:state_pressed="true">
                    <shape android:shape="rectangle">
                        <solid android:color="#EE6030"/>
                    </shape>
            </item>

            <item >
                <shape android:shape="rectangle">
                    <solid
                        android:color="#f6f7fb" />
                    <stroke
                        android:width="@dimen/home_split_line"
                        android:color="@color/home_split_line">

                    </stroke>
                </shape>

            </item>
        </selector>
    </item>

</layer-list>

