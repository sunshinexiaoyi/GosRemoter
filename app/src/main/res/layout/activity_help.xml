<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7fb"
    tools:context="gos.remoter.activity.HelpActivity">

    <gos.remoter.view.TitleBarNew
        android:id="@+id/titleBar"
        style="@style/TitleBar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/titleBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:textSize="@dimen/text_dimen_20sp"
            android:clickable="true"
            android:background="@drawable/program_list"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/versionGuide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/versionGuide"
            android:padding="15dp"
            android:textSize="@dimen/text_dimen_20sp"
            android:clickable="true"
            android:background="@drawable/program_list"/>

        <TextView
            android:id="@+id/guideInfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dimen_15sp"
            android:padding="15dp"
            android:text="@string/guideInfor"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
