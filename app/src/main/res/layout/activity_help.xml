<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f7fb"
    tools:context="gos.remoter.activity.HelpActivity">

    <gos.remoter.view.TitleBarNew
        android:id="@+id/titleBar"
        style="@style/TitleBar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/titleBar"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/versionInform"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/versionInform"
            android:padding="15dp"
            android:textSize="@dimen/program_list_title_size"
            android:background="@drawable/program_list"/>

        <TextView
            android:id="@+id/versionUpdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/versionUpdate"
            android:padding="15dp"
            android:textSize="@dimen/program_list_title_size"
            android:background="@drawable/program_list"/>

        <TextView
            android:id="@+id/versionGuide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/versionGuide"
            android:padding="15dp"
            android:textSize="@dimen/program_list_title_size"
            android:background="@drawable/program_list"/>

    </LinearLayout>

</RelativeLayout>
