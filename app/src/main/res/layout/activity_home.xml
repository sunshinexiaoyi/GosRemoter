<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <gos.remoter.view.TitleBarNew
        android:id="@+id/titleBar"
        style="@style/TitleBar" />

    <RelativeLayout
        android:id="@+id/homeAD"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <!--android:background="@drawable/details_bg_window"-->
        <!--android:clipChildren="false"-->

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@color/viewpager_bg"
            />
<!--android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"-->
    </RelativeLayout>

    <include
        android:id="@+id/app_box"
        layout="@layout/live_player"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"/>

    <GridView
        android:id="@+id/gridActivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/home_grid_bg"
        android:scrollbars="none"
        android:layout_gravity="center"
        android:numColumns="3"
        android:visibility="visible"/>

</LinearLayout>
