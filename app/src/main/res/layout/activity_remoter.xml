<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

    <gos.remoter.view.TitleBarNew
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleBar"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="#f6f7fb">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/remoteOnOff"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/remoter_on_off"/>

            <ImageView
                android:id="@+id/remoteBack"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toLeftOf="@+id/remoteOnOff"
                android:layout_marginRight="50dp"
                android:layout_alignBottom="@+id/remoteOnOff"
                android:background="@drawable/remoter_back"/>

            <ImageView
                android:id="@+id/remoteMute"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_toRightOf="@+id/remoteOnOff"
                android:layout_marginLeft="50dp"
                android:layout_alignBottom="@+id/remoteOnOff"
                android:background="@drawable/remoter_mute"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center">

            <gos.remoter.adapter.RemoterSetting
                android:id="@+id/remoteSet"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/remoteNumber"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:background="@drawable/remoter_number"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/remoteMenu"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/remoter_menu"/>

            <ImageView
                android:id="@+id/remoteFav"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/remoter_fav"/>

            <ImageView
                android:id="@+id/remotePvr"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/remoter_pvr"/>

            <ImageView
                android:id="@+id/remoteExit"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="@drawable/remoter_exit"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>