<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal">
<!--android:background="@drawable/list_item_click_bg"-->

    <ImageView
        android:id="@+id/textDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:src="@drawable/programlist_fav_uncaceled"
        android:clickable="true"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/textNum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/black_text"
        android:textSize="@dimen/text_dimen_22sp" />

    <gos.remoter.view.MarqueeTextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="@dimen/text_dimen_22sp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/black_text"
        android:padding="5dp"/>
    <!--android:marqueeRepeatLimit="marquee_forever",只有获取焦点才有效，与item点击有冲突，枪战抢占-->

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/textEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:src="@drawable/programlist_fav_nomal"
        android:clickable="true"
        android:layout_marginRight="20dp"
        android:padding="5dp"/>
</LinearLayout>
