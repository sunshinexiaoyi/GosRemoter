<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="280dp"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/remoter_number_dialog"
        >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:minWidth="70dp"
            android:gravity="center">

            <Button
                android:id="@+id/numberOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item" />

            <Button
                android:id="@+id/numberTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:layout_marginLeft="10dp"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>

            <Button
                android:id="@+id/numberThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:layout_marginLeft="10dp"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:minWidth="70dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/numberFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>

            <Button
                android:id="@+id/numberFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:layout_marginLeft="10dp"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>

            <Button
                android:id="@+id/numberSix"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="27sp"
                android:layout_marginLeft="10dp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:minWidth="70dp"
            android:gravity="center">

            <Button
                android:id="@+id/numberSeven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>

            <Button
                android:id="@+id/numberEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:layout_marginLeft="10dp"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>

            <Button
                android:id="@+id/numberNine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:layout_marginLeft="10dp"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:minWidth="70dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/numberBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="BACK"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>

            <Button
                android:id="@+id/numberZero"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>

            <Button
                android:id="@+id/numberOk"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OK"
                android:layout_marginLeft="10dp"
                android:textSize="27sp"
                android:textColor="@drawable/remoter_number_text_color"
                android:background="@drawable/remoter_number_dialog_item"/>
        </TableRow>

    </TableLayout>
</LinearLayout>