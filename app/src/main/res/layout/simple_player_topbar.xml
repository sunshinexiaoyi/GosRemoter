<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_video_top_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/new_live_bar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/app_video_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/new_live_back" />

    <TextView
        android:id="@+id/app_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="marquee"
        android:padding="8dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_dimen_12sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/app_video_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:clickable="true"
        android:src="@drawable/new_live_list" />

    <ImageView
        android:id="@+id/app_video_epg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:clickable="true"
        android:src="@drawable/new_live_epg" />

    <ImageView
        android:id="@+id/app_video_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:src="@drawable/simple_player_menu" />

</LinearLayout>
